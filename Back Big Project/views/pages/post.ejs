<%- include(rootPath + '/views/layout/header.ejs') %>
<div class="row mt-3 mx-0 border-bottom border-3">
    <div class="col-3 d-grid">
      <button
        class="btn btn mb-3 btn-outline-warning"
        type="button"
        data-bs-toggle="modal"
        data-bs-target="#subjectAddEditModal"
        id="btnSubjectAdd"
        onclick="location.href='/'"
      >
        Add
      </button>
    </div>
  </div>
  <div class="row mx-0 mt-3">
    <div class="col-12">
      <table
        id="tblSubject"
        class="table table-striped table-hover table-bordered"
      >
        <thead class="table-warning text-center">
          <tr>
            <th>Edit</th>
            <th>Delete</th>
            <th>ID</th>
            <th>Fullname</th>
            <th>Price of Small</th>
            <th>Price of Big</th>
            <th>Image</th>
          </tr>
        </thead>
        <tbody class="td-cl">
          <% menu.forEach(item => { %> 
          <tr>
            <td>
              <a class="editBtn" href="/edit/<%= item.id %>"><i class="fa-solid fa-pen-to-square text-warning d-flex justify-content-center"></i></a>
            </td>
            <td>
              <a href="/delete/<%= item.id %>" class="deleteBtn"><i class="fa-solid fa-trash-can text-warning d-flex justify-content-center"></i></a>
            </td>
            <td><%= item.id %></td>
            <td><%= item.fullname %></td>
            <td><%= item.priceSmall %></td>
            <td><%= item.priceBig %></td>
            <td><%= item.img %></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>
</div>
<%- include(rootPath + '/views/layout/footer.ejs') %>
